{
  "name": "secure-file",
  "author": {
    "name" : "Amir Arab",
    "email": "contact@secure-file.amir4rab.com",
    "url" : "http://amir4rab.com/"
  },
  "description": "Free and Open-source web-app which lets you store your files inside your browser",
  "homepage": "https://github.com/amir4rab/secure-file",
  "projectUrl": "https://github.com/amir4rab/secure-file",
  "repository": "https://github.com/amir4rab/secure-file",
  "version": "1.0.3",
  "private": true,
  "main": "main/index.js",
  "build": {
    "appId": "com.electron.secure-file",
    "productName": "Secure file",
    "copyright": "Copyright Â© 2022 amir4rab",
    "dmg": {
			"icon": false
		},
    "mac": {
			"category": "public.app-category.Utilities",
      "hardenedRuntime": true
		},
		"linux": {
      "desktop": {
        "StartupNotify": "false",
        "Encoding": "UTF-8",
        "MimeType": "x-scheme-handler/deeplink"
      },
			"target": ["AppImage"],
			"category": "Utility"
		},
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "deleteAppDataOnUninstall": true
    }
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "export": "next build && next export",
    "docker-build": "IS_DOCKER_BUILD=true next build",
    "analyze": "ANALYZE=true next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest --watch",
    "cypress": "cypress open",
    "clean": "rimraf dist main out .next",
    "app-dev": "NEXT_PUBLIC_IS_APP=true npm run build-electron && electron .",
    "build-electron": "tsc -p electron-src",
    "app-build": "NEXT_PUBLIC_IS_APP=true npm run export && npm run build-electron",
    "pack-app": "npm run app-build && electron-builder --dir",
    "dist": "npm run app-build && electron-builder",
    "type-check": "tsc -p ./tsconfig.json && tsc -p ./electron-src/tsconfig.json"
  },
  "dependencies": {
    "@amir4rab/crypto": "^0.1.1",
    "@amir4rab/web-rtc-connector-client": "^1.2.0",
    "@mantine/core": "^4.1.2",
    "@mantine/dropzone": "^4.1.2",
    "@mantine/form": "^4.1.2",
    "@mantine/hooks": "^4.1.2",
    "@mantine/next": "^4.1.2",
    "@mantine/notifications": "^4.1.2",
    "@mantine/prism": "^4.1.2",
    "@mantine/spotlight": "^4.1.2",
    "@next/bundle-analyzer": "^12.1.5",
    "@types/jest": "^27.4.1",
    "@types/workbox-sw": "^4.3.2",
    "comlink": "^4.3.1",
    "electron-is-dev": "^2.0.0",
    "electron-next": "^3.1.5",
    "localforage": "^1.10.0",
    "next": "12.1.0",
    "next-compose-plugins": "^2.2.1",
    "next-pwa": "^5.5.0",
    "qrcode": "^1.5.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-icons": "^4.3.1",
    "react-markdown": "^8.0.2",
    "ua-parser-js": "^1.0.2",
    "uuid": "^8.3.2",
    "worker-plugin": "^5.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.4",
    "@types/marked": "^4.0.3",
    "@types/node": "17.0.21",
    "@types/qrcode": "^1.4.2",
    "@types/react": "17.0.39",
    "@types/ua-parser-js": "^0.7.36",
    "@types/uuid": "^8.3.4",
    "cypress": "^9.5.1",
    "electron": "^18.2.0",
    "electron-builder": "^23.0.3",
    "eslint": "8.10.0",
    "eslint-config-next": "12.1.0",
    "gray-matter": "^4.0.3",
    "jest": "^27.5.1",
    "marked": "^4.0.12",
    "rimraf": "^3.0.2",
    "sass": "^1.49.9",
    "typescript": "4.6.2"
  }
}
